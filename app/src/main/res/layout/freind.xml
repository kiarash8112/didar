<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_marginTop="15dp"        app:srcCompat="@android:drawable/ic_menu_revert"
        android:tint="#000000"
        android:id="@+id/backimg"
        android:layout_width="49dp"
        android:layout_height="wrap_content" />
</LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_weight="0.2"> <android.support.design.widget.TextInputLayout
      android:layout_width="match_parent"
      android:layout_marginTop="20dp"
      android:layout_height="wrap_content">
      <EditText
          android:id="@+id/fname"
          android:layout_gravity="center"
          android:layout_marginTop="18dp"
          android:textColor="#ff5a5a"
          android:hint="لطفا نام دوست خود را وارد کنید"
          android:layout_width="335dp"
          android:layout_height="wrap_content" />
  </android.support.design.widget.TextInputLayout></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/fphone"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:textColor="#ff5a5a"
            android:hint="لطفا تلفن دوست خود را وارد کنید"
            android:layout_width="335dp"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        ><android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/faddress"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:textColor="#ff5a5a"
            android:hint="لطفا آدرس دوست خود را وارد کنید"
            android:layout_width="335dp"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        > <Button
        android:layout_margin="15dp"
        android:id="@+id/creat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/startbutton"
        android:text="ثبت"
        android:textColor="#ffffff" /></LinearLayout>

</LinearLayout>