<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="right"
    android:background="#fff"
    android:layoutDirection="ltr"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="30dp"
                android:textColor="#ff5e5a"
                android:text="خطا در اتصال به اینترنت"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/neterror"
                android:layout_alignTop="@+id/imageView3"
                android:layout_centerHorizontal="true" />
            <TextView
                android:textColor="#ff5e5a"
                android:text=" شما باید به اینترنت متصل شوید"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_below="@+id/neterror"
                android:layout_alignStart="@+id/phonenet"
                android:layout_marginTop="12dp"
                android:layout_toStartOf="@+id/imageView3" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="93dp"
            android:layout_height="114dp"
            android:layout_gravity="center"
            android:src="@drawable/meetlogo" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:onClick="wifi"
                android:padding="13dp"
                android:id="@+id/wifi"
                android:textColor="#ffffff"
                android:background="@drawable/startbutton"
                android:text="اینترنت wi_fi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="23dp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginRight="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:id="@+id/phonenet"
            android:textColor="#ffffff"
            android:background="@drawable/startbutton"
            android:text="تنظیمات"
             />
            }</LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginRight="109dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:id="@+id/again"
            android:textColor="#ffffff"
            android:background="@drawable/startbutton"
            android:text="دوباره"></Button>
    </LinearLayout>


</LinearLayout>